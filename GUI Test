krit1.place(x=10, y=10, height='35', width='190')
krit2 = Label(tab1, text='Beschreibung/Konkretisierung\ndes Auftrages, der Ausgangssituation und des Projektumfelds', bg='white', fg='black',anchor="nw", padx=5, justify='left' )
krit2.place(x=10, y=115, height='35', width='190')
krit3 = Label(tab1, text='Beschreibung der\nProzessschritte', bg='white', fg='black',anchor="nw", padx=5, justify='left' )
krit3.place(x=10, y=220, height='35', width='190')
krit4 = Label(tab1, text='Darstellung der\nProjektergebnisse und praxisbezogene', bg='white', fg='black',anchor="nw", padx=5, justify='left' )
krit4.place(x=10, y=325, height='35', width='190')

#Praesentation und Fachgespraech

