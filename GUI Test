import tkinter
from tkinter import *



mainwindow = Tk()
mainwindow.title('Notenberechnung')
mainwindow.geometry("600x600")
mainwindow.resizable(0, 0)

#Button
berechnenButton = Button(master=mainwindow, borderwidth=0, bg='black')
berechnenButton.place(x=180, y=540, height=30, width=40)
exitButton = Button(master=mainwindow, borderwidth=0, bg='white', text='Exit', command=mainwindow.destroy)
exitButton.place(x=350, y=10, height='30', width='40')

#Eingabe
punkte1 = Entry(master=mainwindow,text='', bg='white', fg="black")
punkte1.place(x=100, y=100, height=35, width=35)

punkte2 = Entry(master=mainwindow,text='', bg='white', fg="black")
punkte2.place(x=100, y=250, height=35, width=35)

punkte3 = Entry(master=mainwindow,text='', bg='white', fg="black")
punkte3.place(x=100, y=350, height=35, width=35)

#Gewichtung
prozent1 = Label(master=mainwindow, text='10%', bg='white', fg='black')
prozent1.place(x=100, y=10, height='35', width=35)
prozent2 = Label(master=mainwindow, text='30%', bg='white', fg='black')
prozent2.place(x=100, y=200, height='35', width=35)
prozent3 = Label(master=mainwindow, text='30%', bg='white', fg='black')
prozent3.place(x=100, y=300, height='35', width=35)


#Start
mainwindow.mainloop()