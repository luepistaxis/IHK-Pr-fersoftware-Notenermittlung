import tkinter
from tkinter import *
from tkinter import ttk

def berechnen():
    teil1= float(punkte1.get())
    teil2= float(punkte2.get())
    teil3= float(punkte3.get())
    teil4= float(punkte4.get())

    ergebnis= teil1 + teil2 + teil3 + teil4
    labelErgebnis.config(text=str(ergebnis))








mainwindow = Tk()
mainwindow.title('Notenberechnung')
mainwindow.geometry("1000x600")
mainwindow.resizable(0, 0)

#TabControl
tabControl = ttk.Notebook(mainwindow)

tab1= Frame(tabControl, width=1000, height=600)
tab2= Frame(tabControl, width=1000, height=600)

tabControl.add(tab1, text='Praesentation')
tabControl.add(tab2, text='Gespraech')

tabControl.place(x=0, y=0)

#ButtonTeil1 Projektarbeit
projektBerechnenButton = Button(tab1, borderwidth=0, bg='black', command=berechnen)
projektBerechnenButton.place(x=350, y=530, height=35, width=40)

#ButtonTeil1 Praesentation
praeBerechnenButton = Button(tab1, borderwidth=0, bg='black')
praeBerechnenButton.place(x=460, y=325, height=35, width=40)


#Exit
exitButton = Button(tab1, borderwidth=0, bg='white', text='Exit', command=mainwindow.destroy)
exitButton.place(x=950, y=0, height='30', width='40')


#Projektarbeit & Dokumentation
#Eingabe
punkte1 = Entry(tab1,text='', bg='white', fg="black", justify='center')
punkte1.place(x=210, y=55, height=35, width=35)

punkte2 = Entry(tab1,text='', bg='white', fg="black", justify='center')
punkte2.place(x=210, y=160, height=35, width=35)

punkte3 = Entry(tab1,text='', bg='white', fg="black", justify='center')
