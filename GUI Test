punkte4 = Entry(tab1,text='', bg='white', fg="black", justify='center')
punkte4.place(x=210, y=370, height=35, width=35)



#Gewichtung
prozent1 = Label(tab1, text='10%', bg='white', fg='black')
prozent1.place(x=210, y=10, height='35', width=35)
prozent2 = Label(tab1, text='30%', bg='white', fg='black')
prozent2.place(x=210, y=115, height='35', width=35)
prozent3 = Label(tab1, text='45%', bg='white', fg='black')
prozent3.place(x=210, y=220, height='35', width=35)
prozent4 = Label(tab1, text='15%', bg='white', fg='black')
prozent4.place(x=210, y=325, height='35', width=35)


#Kriterien Teil A1
